{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@screens": ["screens/index"],
      "@screens/*": ["screens/*"],
      "@constants": ["constants/index"],
      "@components/*": ["components/*"],
      "@containers": ["containers/index"],
      "@hooks": ["hooks/index"],
      "@i18n": ["i18n/index"],
      "@utils": ["utils/index"],
      "@types": ["types/index"],
      "@images/*": ["assets/images/*"]
    }
  }
}
